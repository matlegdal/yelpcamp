<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h3 style="text-align: center;">Create a new campground</h3>

            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Name of the campground">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Price per night" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Type an image url">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="10" class="form-control">Enter a description</textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-block" type="submit">
                    </div>
                </form>
                
                <a href="/campgrounds">Back to list of campgrounds</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>