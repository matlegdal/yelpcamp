<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h3 style="text-align: center;">Add a new comment to <%= campground.name %></h3>

            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]">Type your comment here</textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-block" type="submit">
                    </div>
                </form>
                
                <a href="/campgrounds">Back to list of campgrounds</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>